{
    "manifest_version": 2,
    "name": "Shop Helper",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "*://apcoware.ir/*",
                "https://www.boyner.com.tr/sepet"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ],
    "browser_action": {
        "default_icon": "icons/basket.png"       
    },
    "icons": {
        "48": "icons/apcologo_48.png",
        "128": "icons/apcologo_128.png"
    }
}